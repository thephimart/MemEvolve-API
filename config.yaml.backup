llm:
  base_url: "http://localhost:11434/v1"
  api_key: "dummy-key"
  model: null
  timeout: 120
  max_retries: 3

storage:
  backend_type: "json"
  path: "./data/memory"
  vector_dim: 768
  index_type: "flat"

retrieval:
  strategy_type: "hybrid"
  default_top_k: 5
  semantic_weight: 0.7
  keyword_weight: 0.3
  enable_caching: true
  cache_size: 1000

management:
  enable_auto_management: true
  auto_prune_threshold: 1000
  auto_consolidate_interval: 100
  deduplicate_threshold: 0.9
  forgetting_strategy: "lru"
  max_memory_age_days: 365

encoder:
  encoding_strategies:
    - "lesson"
    - "skill"
  enable_abstraction: true
  abstraction_threshold: 10
  enable_tool_extraction: true

evolution:
  population_size: 10
  generations: 20
  mutation_rate: 0.1
  crossover_rate: 0.5
  selection_method: "pareto"
  tournament_size: 3

logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  log_file: null
  enable_operation_log: true
  max_log_size_mb: 100

project_name: "memevolve"
project_root: "."
data_dir: "./data"
cache_dir: "./cache"
